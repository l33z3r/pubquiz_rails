.row
  .col-md-12
    .page-header
      %h1 Currencies
.row
  .col-md-12
    =will_paginate @currencies, renderer: BootstrapPagination::Rails
    %table.table.table-striped.table-bordered
      %tr
        %th Name
        %th Iso code
        %th Leading symbol
        %th Trailing symbol
        %th Thousands separator
        %th Decimal separator
        %th Active
        %th
      -@currencies.each do |currency|
        %tr
          %td=currency.name
          %td=currency.iso_code
          %td=currency.leading_symbol
          %td=currency.trailing_symbol
          %td=currency.thousands_separator
          %td=currency.decimal_separator
          %td=currency.active
          %td
            =link_to 'View', currency
            =link_to 'Edit', edit_currency_url(currency)
            -if currency.destroyable?
              =link_to 'Delete', currency, method: :delete, data: { confirm: 'Are you sure?' }
.row
  .col-md-12
    =link_to 'New', new_currency_url, class: 'btn btn-success'