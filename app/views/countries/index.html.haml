.row
  .col-md-12
    .page-header
      %h1 Countries
.row
  .col-md-12
    =will_paginate @countries, renderer: BootstrapPagination::Rails
    %table.table.table-striped.table-bordered
      %tr
        %th Name
        %th In the eu
        %th Currency
        %th
      -@countries.each do |country|
        %tr
          %td=country.name
          %td=country.in_the_eu
          %td=country.currency.name
          %td
            =link_to 'View', country
            =link_to 'Edit', edit_country_url(country)
            -if country.destroyable?
              =link_to 'Delete', country, method: :delete, data: { confirm: 'Are you sure?' }
.row
  .col-md-12
    =link_to 'New', new_country_url, class: 'btn btn-success'