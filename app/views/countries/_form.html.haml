.row
  .col-md-8.col-md-offset-2
    =form_for(@country, html: {class: 'form-horizontal', role: 'form'}) do |f|
      .well.well-sm
        =render partial: '/layouts/error_messages', locals: {thing: @country, message: nil}
        .form-group
          =f.label :name, class: 'control-label col-md-4'
          .col-md-8
            =f.text_field :name, class: 'form-control'
        .form-group
          =f.label :in_the_eu, class: 'control-label col-md-4'
          .col-md-8
            =f.text_field :in_the_eu, class: 'form-control'
        .form-group
          =f.label :currency_id, class: 'control-label col-md-4'
          .col-md-8
            =f.collection_select :currency_id, @currencies, :id, :name, {prompt: 'Select...'}, {class: 'form-control'}
      =f.submit 'Save', class: 'btn btn-success'
      or
      =link_to 'cancel', countries_path
